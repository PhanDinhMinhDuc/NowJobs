    <script>
        const toggleBtn = document.getElementById('chat-toggle');
        const popup = document.getElementById('chat-popup');
        const closeBtn = popup.querySelector('.close-btn');
        const chatBody = document.getElementById('chat-body');
        const chatInput = document.getElementById('chat-input');
        const sendBtn = document.getElementById('send-btn');

        toggleBtn.addEventListener('click', () => {
            popup.style.display = 'flex';
            chatInput.focus();
        });

        closeBtn.addEventListener('click', () => {
            popup.style.display = 'none';
        });

        function appendMessage(text, cls) {
            const msg = document.createElement('div');
            msg.classList.add('message', cls);
            msg.textContent = text;
            chatBody.appendChild(msg);
            chatBody.scrollTop = chatBody.scrollHeight;
        }

        function sendMessage() {
            const text = chatInput.value.trim();
            if (!text) return;

            appendMessage(text, 'user');
            chatInput.value = '';

            // Call our secure backend instead of direct API
            callBackendChatbot(text);
        }

        sendBtn.addEventListener('click', sendMessage);
        chatInput.addEventListener('keypress', e => {
            if (e.key === 'Enter') sendMessage();
        });

        async function callBackendChatbot(userPrompt) {
            debugger;
            appendMessage('Đang xử lý...', 'bot');

            try {
                // Lấy token từ form có sẵn trong trang hoặc tạo mới
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                const response = await fetch('/Chatbot/SendMessage', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ message: userPrompt })
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();

                const lastBot = chatBody.querySelector('.bot:last-child');
                if (lastBot && lastBot.textContent === 'Đang xử lý...') {
                    lastBot.remove();
                }

                if (data.success) {
                    appendMessage(data.reply, 'bot');
                } else {
                    appendMessage('Lỗi: ' + (data.error || 'Không có phản hồi.'), 'bot');
                }
            } catch (err) {
                console.error('Error:', err);
                const lastBot = chatBody.querySelector('.bot:last-child');
                if (lastBot && lastBot.textContent === 'Đang xử lý...') {
                    lastBot.remove();
                }
                appendMessage('Lỗi kết nối với hệ thống. Vui lòng thử lại sau.', 'bot');
            }
        }
    </script>
